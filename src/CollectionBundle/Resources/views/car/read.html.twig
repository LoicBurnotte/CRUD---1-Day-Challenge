{% extends '@Collection/layout.html.twig' %}

{% block title %}Cars{% endblock %}
{% block stylesheets %}{% endblock %}

{% block body %}
    <div class="container-fluid text-center">
        <div class="row">
            <div class="col-sm-10 offset-1">
                <h1>Cars Collection</h1>
                <table class="table">
                    <thead>
                    <tr>
                        <th>Mark</th>
                        <th>Model</th>
                        <th>Construction date</th>
                        <th>Picture</th>
                        <th>Price</th>
                        <th>Purchase date</th>
                        <th>Serial Number</th>
                        <th>Category</th>
                        <th>Garage</th>
                    </tr>
                    </thead>
                    {% for car in cars %}
                        <tbody>
                        <tr>
                            <td>{{ car.mark }}</td>
                            <td>{{ car.model }}</td>
                            <td>{{ car.dateConstruction|date('d-m-Y') }}</td>
                            <td><img src="{{ car.picturePath }}" class="carPicture" alt="carPicture"></td>
                            <td>{{ car.price }}</td>
                            <td>{{ car.datePurchase|date('d-m-Y') }}</td>
                            <td>{{ car.serialNumber }}</td>
                            <td>{{ car.category.name }}</td>
                            <td>{{ car.garage.locate }}</td>
                            <td><a href="{{ path('collection_car_edit', {'carID' : car.id }) }}"><i class="far fa-edit"></i></a></td>
                            <td><a href="{{ path('collection_car_remove', {'carID' : car.id }) }}" onclick="if(!confirm('Delete car?')) {return false;}"><i class="far fa-trash-alt red"></i></a></td>
                        </tr>
                        </tbody>
                    {% endfor %}
                </table>
                <a href="{{ path('collection_car_add') }}"><button type="button" class="btn btn-primary btn-lg">ADD CAR</button></a>
                <br><br>
                <a href="{{ path('collection_home') }}"><i class="fas fa-arrow-circle-left"></i> Home</a>
                <br><br>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}{% endblock %}
